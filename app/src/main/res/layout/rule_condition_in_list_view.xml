<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="5dp">

        <LinearLayout
                android:id="@+id/condition_placeholder"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

            <TextView
                    android:id="@+id/condition_name"
                    android:text="@string/click_to_add_condition"
                    android:background="@drawable/rounded_corner"
                    android:layout_height="fill_parent"
                    android:layout_width="280sp"
                    android:textSize="18sp"
                    android:maxLength="25"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textStyle="bold" android:textAllCaps="true"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/condition_content"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/entity_name"
                    android:background="@drawable/rounded_corner"
                    android:layout_height="fill_parent"
                    android:layout_width="140sp"
                    android:text="Any contact sensor"
                    android:textSize="18sp" android:maxLength="25" android:ellipsize="end"
                    android:gravity="center_vertical" android:layout_marginRight="5dp" android:textAlignment="center"
                    android:textStyle="bold" android:textAllCaps="true"/>

            <TextView
                    android:id="@+id/event_name"
                    android:background="@drawable/rounded_corner"
                    android:layout_height="fill_parent"
                    android:layout_width="140sp"
                    android:textSize="18sp"
                    android:text="is opened"
                    android:maxLength="25" android:ellipsize="end"
                    android:gravity="center_vertical" android:textAlignment="center" android:textStyle="bold"
                    android:textAllCaps="true"/>

        </LinearLayout>

        <Button
                android:text="-"
                android:textSize="24sp"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:id="@+id/remove_condition_button"/>

        <Button
                android:text="+"
                android:textSize="24sp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/add_condition_button"/>
    </TableRow>

</TableLayout>
