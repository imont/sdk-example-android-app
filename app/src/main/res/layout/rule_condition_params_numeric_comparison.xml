<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numeric_condition"
            android:spinnerMode="dialog"
            android:entries="@array/rule_condition_comparison_spinner"
            android:layout_row="0" android:layout_column="0"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numeric_condition_value"
            android:layout_row="0" android:layout_column="1" android:hint="value" android:textAllCaps="false"/>
</GridLayout>